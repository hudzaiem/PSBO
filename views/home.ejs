    <!-- jumbotron -->
    <div class="container mt-5 mb-5">
      <div class="row justify-content-center">
        <% data.forEach(item => { %>

        <div class="col-3 mt-3 mb-3">
          <div
            class="card shadow"
            style="
              width: 15rem;
              min-height: 350px;
              max-height: 350px;
              overflow-y: auto;
              border: 2px solid #3f37c9;
            "
          >
            <img
              src="data:image/<%=item.gambar.contentType%>;base64,<%=item.gambar.data.toString('base64')%>"
              class="card-img-top"
              style="max-height: 150px"
              alt="satu"
            />
            <div
              class="card-body"
              style="
                display: flex;
                flex-direction: column;
                justify-content: space-between; ;
              "
            >
              <h5
                class="card-title"
                style="text-transform: capitalize; font-size: 1rem"
              >
                <%= item.question5 %>
              </h5>
              <!-- <p class="card-text"><%= item.question5.substring(0, 30) %></p> -->
              <a
                href="/show/<%=item._id%>"
                target="_blank"
                class="btn btn-primary"
                style="background-color: #f72585; color: white; display: block"
                ;
                float
                >Donasi</a
              >
            </div>
          </div>
        </div>
        <% }) %>
      </div>
